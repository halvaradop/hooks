{
  "name": "@halvaradop/hooks",
  "version": "0.1.0",
  "description": "Library of React hooks for various utilities and functionalities.",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && pnpm clean:cts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean:cts": "rm -rf dist/**/*.cts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/hooks.git"
  },
  "keywords": [
    "React",
    "hooks",
    "utilities",
    "custom hooks"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/halvaradop/hooks#readme",
  "bugs": {
    "email": "hernanvid123@gmail.com",
    "url": "https://github.com/halvaradop/hooks/issues"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./use-broadcast-channel": {
      "types": "./dist/hooks/use-broadcast-channel.d.ts",
      "import": "./dist/hooks/use-broadcast-channel.js",
      "require": "./dist/hooks/use-broadcast-channel.cjs"
    },
    "./use-copy-to-clipboard": {
      "types": "./dist/hooks/use-copy-to-clipboard.d.ts",
      "import": "./dist/hooks/use-copy-to-clipboard.js",
      "require": "./dist/hooks/use-copy-to-clipboard.cjs"
    },
    "./use-document-event-listener": {
      "types": "./dist/hooks/use-document-event-listener.d.ts",
      "import": "./dist/hooks/use-document-event-listener.js",
      "require": "./dist/hooks/use-document-event-listener.cjs"
    },
    "./use-event-listener": {
      "types": "./dist/hooks/use-event-listener.d.ts",
      "import": "./dist/hooks/use-event-listener.js",
      "require": "./dist/hooks/use-event-listener.cjs"
    },
    "./use-interval": {
      "types": "./dist/hooks/use-interval.d.ts",
      "import": "./dist/hooks/use-interval.js",
      "require": "./dist/hooks/use-interval.cjs"
    },
    "./use-local-storage": {
      "types": "./dist/hooks/use-local-storage.d.ts",
      "import": "./dist/hooks/use-local-storage.js",
      "require": "./dist/hooks/use-local-storage.cjs"
    },
    "./use-media-query": {
      "types": "./dist/hooks/use-media-query.d.ts",
      "import": "./dist/hooks/use-media-query.js",
      "require": "./dist/hooks/use-media-query.cjs"
    },
    "./use-on-click-outside": {
      "types": "./dist/hooks/use-on-click-outside.d.ts",
      "import": "./dist/hooks/use-on-click-outside.js",
      "require": "./dist/hooks/use-on-click-outside.cjs"
    },
    "./use-online-status": {
      "types": "./dist/hooks/use-online-status.d.ts",
      "import": "./dist/hooks/use-online-status.js",
      "require": "./dist/hooks/use-online-status.cjs"
    },
    "./use-session-storage": {
      "types": "./dist/hooks/use-session-storage.d.ts",
      "import": "./dist/hooks/use-session-storage.js",
      "require": "./dist/hooks/use-session-storage.cjs"
    },
    "./use-toggle": {
      "types": "./dist/hooks/use-toggle.d.ts",
      "import": "./dist/hooks/use-toggle.js",
      "require": "./dist/hooks/use-toggle.cjs"
    },
    "./use-window-event-listener": {
      "types": "./dist/hooks/use-window-event-listener.d.ts",
      "import": "./dist/hooks/use-window-event-listener.js",
      "require": "./dist/hooks/use-window-event-listener.cjs"
    },
    "./use-window-size": {
      "types": "./dist/hooks/use-window-size.d.ts",
      "import": "./dist/hooks/use-window-size.js",
      "require": "./dist/hooks/use-window-size.cjs"
    }
  },
  "packageManager": "pnpm@10.11.1",
  "devDependencies": {
    "@halvaradop/prettier-config": "^1.1.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
