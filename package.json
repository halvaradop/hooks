{
  "name": "@halvaradop/hooks",
  "version": "0.1.0",
  "description": "Library of React hooks for various utilities and functionalities.",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/hooks.git"
  },
  "keywords": [
    "React",
    "hooks",
    "utilities",
    "custom hooks"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/halvaradop/hooks#readme",
  "bugs": {
    "email": "hernanvid123@gmail.com",
    "url": "https://github.com/halvaradop/hooks/issues"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./use-broadcast-channel": {
      "types": "./dist/use-broadcast-channel.d.ts",
      "import": "./dist/use-broadcast-channel.js",
      "require": "./dist/use-broadcast-channel.cjs"
    },
    "./use-copy-to-clipboard": {
      "types": "./dist/use-copy-to-clipboard.d.ts",
      "import": "./dist/use-copy-to-clipboard.js",
      "require": "./dist/use-copy-to-clipboard.cjs"
    },
    "./use-document-event-listener": {
      "types": "./dist/use-document-event-listener.d.ts",
      "import": "./dist/use-document-event-listener.js",
      "require": "./dist/use-document-event-listener.cjs"
    },
    "./use-event-listener": {
      "types": "./dist/use-event-listener.d.ts",
      "import": "./dist/use-event-listener.js",
      "require": "./dist/use-event-listener.cjs"
    },
    "./use-interval": {
      "types": "./dist/use-interval.d.ts",
      "import": "./dist/use-interval.js",
      "require": "./dist/use-interval.cjs"
    },
    "./use-local-storage": {
      "types": "./dist/use-local-storage.d.ts",
      "import": "./dist/use-local-storage.js",
      "require": "./dist/use-local-storage.cjs"
    },
    "./use-media-query": {
      "types": "./dist/use-media-query.d.ts",
      "import": "./dist/use-media-query.js",
      "require": "./dist/use-media-query.cjs"
    },
    "./use-on-click-outside": {
      "types": "./dist/use-on-click-outside.d.ts",
      "import": "./dist/use-on-click-outside.js",
      "require": "./dist/use-on-click-outside.cjs"
    },
    "./use-online-status": {
      "types": "./dist/use-online-status.d.ts",
      "import": "./dist/use-online-status.js",
      "require": "./dist/use-online-status.cjs"
    },
    "./use-session-storage": {
      "types": "./dist/use-session-storage.d.ts",
      "import": "./dist/use-session-storage.js",
      "require": "./dist/use-session-storage.cjs"
    },
    "./use-toggle": {
      "types": "./dist/use-toggle.d.ts",
      "import": "./dist/use-toggle.js",
      "require": "./dist/use-toggle.cjs"
    },
    "./use-window-event-listener": {
      "types": "./dist/use-window-event-listener.d.ts",
      "import": "./dist/use-window-event-listener.js",
      "require": "./dist/use-window-event-listener.cjs"
    },
    "./use-window-size": {
      "types": "./dist/use-window-size.d.ts",
      "import": "./dist/use-window-size.js",
      "require": "./dist/use-window-size.cjs"
    }
  },
  "packageManager": "pnpm@10.11.1",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 130,
    "semi": false,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yml",
          "*.yaml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
